import java.sql.*;

public class Determine {
    private int paymentId;
    private String investigatorId;

    public Determine(int paymentId, String investigatorId) {
        this.paymentId = paymentId;
        this.investigatorId = investigatorId;
    }

    public boolean saveToDatabase() {
        String connectionUrl = "jdbc:sqlserver://localhost:1433;databaseName=Carproject;encrypt=true;trustServerCertificate=true;";
        String user = "SANDII";
        String password = "sandy321";

        String insertQuery = "INSERT INTO DETERMINE (PAYMENT_ID, INVESTIGATOR_ID) VALUES (?, ?)";

        try (Connection connection = DriverManager.getConnection(connectionUrl, user, password);
             PreparedStatement ps = connection.prepareStatement(insertQuery)) {

            ps.setInt(1, paymentId);
            ps.setString(2, investigatorId);

            int rowsInserted = ps.executeUpdate();
            return rowsInserted > 0;

        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
    }
}
